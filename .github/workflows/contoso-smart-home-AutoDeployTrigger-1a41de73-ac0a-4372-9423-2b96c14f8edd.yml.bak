name: Trigger auto deployment for contoso-smart-home

# When this action will be executed
on:
  # Automatically trigger it when detected changes in repo
  push:
    branches: 
      [ dev ]
    paths:
    - '**'
    - '.github/workflows/contoso-smart-home-AutoDeployTrigger-1a41de73-ac0a-4372-9423-2b96c14f8edd.yml'

  # Allow manual trigger 
  workflow_dispatch:      

jobs:
  build-and-deploy:
    runs-on: ubuntu-latest
    permissions: 
      id-token: write #This is required for requesting the OIDC JWT Token
      contents: read #Required when GH token is used to authenticate with private repo

    steps:
      - name: Checkout to the branch
        uses: actions/checkout@v2

      - name: Azure Login
        uses: azure/login@v1
        with:
          client-id: ${{ secrets.CONTOSOSMARTHOME_AZURE_CLIENT_ID }}
          tenant-id: ${{ secrets.CONTOSOSMARTHOME_AZURE_TENANT_ID }}
          subscription-id: ${{ secrets.CONTOSOSMARTHOME_AZURE_SUBSCRIPTION_ID }}

      - name: Build and push container image to registry
        uses: azure/container-apps-deploy-action@v2
        with:
          appSourcePath: ${{ github.workspace }}
          _dockerfilePathKey_: _dockerfilePath_
          registryUrl: 
          registryUsername: ${{ secrets.CONTOSOSMARTHOME_REGISTRY_USERNAME }}
          registryPassword: ${{ secrets.CONTOSOSMARTHOME_REGISTRY_PASSWORD }}
          containerAppName: contoso-smart-home
          resourceGroup: demo-louise
          imageToBuild: default/[parameters('containerAppName')]:${{ github.sha }}
          _buildArgumentsKey_: |
            _buildArgumentsValues_


